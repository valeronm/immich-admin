<div>
  <p>
    Hello <%= Current.user.name %>!
  </p>
  <p class="mt-2">
    You have <%= number_with_delimiter Current.user.assets.count %> assets
    with total size <%= number_to_human_size Exif.joins(:asset).merge(Current.user.assets).sum(:fileSizeInByte) %>
  </p>
  <p class="mt-2">
    <%= button_to "Sign out", session_path, method: :delete, remote: true,
                                   class: "w-full sm:w-auto text-center rounded-md px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </p>
</div>
